class Solution {

    public int lengthOfLastWord(String s) {

        boolean reset = false;
        int count = 0;

        for (int i = 0; i < s.length(); i++) {

            if (s.charAt(i) == ' ') {

                reset = true;
            
            }
            else {

                if (reset == true) {

                    count = 0;

                }

                reset = false;

                count++;

            }

        }

        return count;
        
    }

}
