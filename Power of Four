class Solution(object):
    def isPowerOfFour(self, n):
        """
        :type n: int
        :rtype: bool
        """

        if n <= 0:
            return False
            
        while n > 0:
            if n == 1:
                return True
            elif n % 4 != 0:
                return False
            n = int(n / 4)
