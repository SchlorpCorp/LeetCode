import java.util.Scanner;

class lengthOfLastWord {

    public static int length (String s) {

        boolean reset = false;
        int count = 0;

        for (int i = 0; i < s.length(); i++) {

            if (s.charAt(i) == ' ') {

                reset = true;
            
            }
            else {

                if (reset == true) {

                    count = 0;

                }

                reset = false;

                count++;

            }

        }

        return count;
        
    }

    public static void main (String [ ] args) {

        Scanner scan = new Scanner(System.in);

        System.out.print("Enter your string using only the english alphabet characters and spaces (e.g., no special charcaters): ");

        String input = scan.nextLine();

        System.out.println("The length of the last word in your string is: " + length(input));

    }

}
